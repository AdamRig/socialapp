<p id="notice"><%= notice %></p>
<h4>Jump To:
<%= link_to 'Posts', posts_path %>
<%= link_to 'Categories', categories_path %>
<h1>Users</h1>
</h4>

<table>
  <thead>
    <tr>
      <th>Avatar</th>
      <th>Name</th>
      <th>Email</th>
      <th>Dob</th>
      <th>Gender</th>
      <th>Country</th>
      <th>Password</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= image_tag("avatar.jpg", :size => "50x50") %></td>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.DOB %></td>
        <td><%= user.gender %></td>
        <td><%= user.country %></td>
        <td><%= user.password_digest %></td>
        <td><%= link_to 'Show', user %></td>
        <td><%= link_to 'Edit', edit_user_path(user) %></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New User', new_user_path %>

<br>
<%= will_paginate @users %>
